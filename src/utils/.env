# Transformer-based Embeddings configuration
EMBEDDINGS_MODEL_NAME=Alibaba-NLP/gte-large-en-v1.5

# Ollama LLM configuration
LLM_MODEL_NAME=gemma3:12b
LLM_TEMPERATURE=0.5
LLM_TOP_P=0.5
LLM_MAX_TOKENS=2000
LLM_CONTEXT_WINDOW=8192

# LLM System Prompt
LLM_SYSTEM_PROMPT=You are a helpful assistant. Answer the question based on the context. Be detailed in your answers and show your reasoning.

# Indexing configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=300

# ChromaDB configuration
CHROMA_PERSIST_DIRECTORY=chroma_db
CHROMA_COLLECTION_NAME=newspark_collection

# Retrieval configuration
N_RESULTS=15

# Supported file extensions (comma-separated)
SUPPORTED_EXTENSIONS=.py,.js,.java,.html,.css,.md,.txt,.pdf

# Verbose output (displays details of chunks)
VERBOSE=1
